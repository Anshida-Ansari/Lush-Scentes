    $('.js-btn-minus').click(function(e) {
        e.preventDefault();
        var input = $(this).closest('.input-group').find('input');
        var value = parseInt(input.val());
        if (value > 1) {
            input.val(value - 1);
        }
    });

    $('.js-btn-plus').click(function(e) {
        e.preventDefault();
        var input = $(this).closest('.input-group').find('input');
        var value = parseInt(input.val());
        var max = parseInt(input.attr('max'));
        if (value < max) {
            input.val(value + 1);
        }
    });

   
    $('#size-selector').change(function() {
        updatePriceAndStock($(this));
    });

 
    if ($('#size-selector').val()) {
        updatePriceAndStock($('#size-selector'));
    }
});

function updatePriceAndStock(sizeSelector) {
    const selectedOption = sizeSelector.find('option:selected');
    
    if (!selectedOption.val()) {
        $('#variant-stock').text('Select a size to see available stock');
        return;
    }
    
    const regularPrice = selectedOption.data('regular-price');
    const salesPrice = selectedOption.data('sales-price');
    const quantity = selectedOption.data('quantity');
    

    if (salesPrice && salesPrice !== regularPrice) {
        $('#price-display').html(`
            <h3>
                <strong class="item-price">
                    <del>₹${regularPrice}</del> ₹${salesPrice}
                </strong>
            </h3>
        `);
    } else {
