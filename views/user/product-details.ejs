async function handleAddToCart(productId) {
        try {
            const sizeSelect  = document.getElementById('size-selector');
            const quantityInput = document.getElementById('quantity');

            if (!sizeSelect.value) {
                await Swal.fire({
                    title: 'Selection Required',
                    text: 'Please select an size',
                    icon: 'warning',
                    confirmButtonColor: '#3085d6'
                });
                return;
            }

            const quantity = parseInt(quantityInput.value);
            if (isNaN(quantity) || quantity < 1) {
                await Swal.fire({
                    title: 'Invalid Quantity',
                    text: 'Please enter a valid quantity',
                    icon: 'warning',
                    confirmButtonColor: '#3085d6'
                });
                return;
            }

            const payload = {
                productId: productId,
                variant: {
                  size: sizeSelect.value,
                    quantity: quantity
                }
            };

            const response = await fetch('/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(payload)
            });

            const data = await response.json();

            if (!response.ok) {
                throw new Error(data.message || 'Failed to add to cart');
            }

            if (data.cart) {
                const cartCount = data.cart.items.reduce((sum, item) => sum + item.variant.quantity, 0);
                const cartCountElement = document.querySelector('.bag .number');
                if (cartCountElement) {
                    cartCountElement.textContent = cartCount;
                }
            }

            await Swal.fire({
                title: 'Success!',
                text: data.message || 'Product added to cart successfully!',
                icon: 'success',
                confirmButtonColor: '#3085d6'
            });

        } catch (error) {
            console.error('Error:', error);
            await Swal.fire({
                title: 'Error!',
                text: error.message || 'Error adding to cart',
                icon: 'error',
                confirmButtonColor: '#3085d6'
            });
        }
    }

    function showAlert(message, type = 'error') {
        const options = {
            title: type === 'error' ? 'Error!' : 'Success!',
            text: message,
            icon: type,
            confirmButtonColor: '#3085d6'
        };
        
        Swal.fire(options);
    }

    function handleSizeChange(productId) {
        const sizeSelector = document.getElementById('size-selector');
        const quantityInput = document.getElementById('quantity');
        const stockDisplay = document.getElementById('variant-stock');
        
        if (!sizeSelector || !quantityInput || !stockDisplay) return;
        
        const selectedSize = sizeSelector.value;
        
        fetch(`/api/products/${productId}/stock?size=${selectedSize}`)
            .then(response => response.json())
            .then(data => {
                if (data.stock !== undefined) {
                    stockDisplay.textContent = `Available Stock: ${data.stock}`;
                    quantityInput.max = data.stock;
                    quantityInput.value = Math.min(quantityInput.value, data.stock);
                }
            })
            .catch(error => {
                console.error('Error fetching stock:', error);
                Swal.fire({
                    title: 'Error!',
                    text: 'Error checking stock availability',
                    icon: 'error',
                    confirmButtonColor: '#3085d6'
                });
            });
    }

function updateStockDisplay(productId) {
    const sizeSelector = document.getElementById('size-selector');
    const quantityInput = document.getElementById('quantity');
    const stockDisplay = document.getElementById('variant-stock');
    
    if (!sizeSelector || !stockDisplay) return;
    
    const selectedSize = sizeSelector.value;
    if (!selectedSize) {
        stockDisplay.textContent = "Please select an Size";
        return;
    }
    
    console.log(`Fetching stock from: /api/products/${productId}/stock?size=${selectedSize}`);


    fetch(`/productDetailsPage/${productId}/stock?size=${selectedSize}`)
        .then(response => response.json())
        .then(data => {
            if (data.success && data.stock !== undefined) {
                stockDisplay.textContent = `Available Stock: ${data.stock}`;
                if (quantityInput) {
                    quantityInput.setAttribute('max', data.stock);
                    if (parseInt(quantityInput.value) > data.stock) {
                        quantityInput.value = data.stock;
                    }
                }
            } else {
                stockDisplay.textContent = data.message || "Error fetching stock";
            }
        })
        .catch(error => {
            console.error('Error fetching stock:', error);
            stockDisplay.textContent = "Error checking stock";
        });
}
