<script>
  $(document).ready(function() {
    // Image zoom functionality
    if ($('.product-image-zoom').length) {
        $('.product-image-zoom').zoom({
            magnify: 1.5
        });
    }

    // Quantity buttons functionality
    $('.js-btn-minus').click(function(e) {
        e.preventDefault();
        var input = $(this).closest('.input-group').find('input');
        var value = parseInt(input.val());
        if (value > 1) {
            input.val(value - 1);
        }
    });

    $('.js-btn-plus').click(function(e) {
        e.preventDefault();
        var input = $(this).closest('.input-group').find('input');
        var value = parseInt(input.val());
        var max = parseInt(input.attr('max'));
        if (value < max) {
            input.val(value + 1);
        }
    });

    // Size selector change event
    $('#size-selector').change(function() {
        updatePriceAndStock($(this));
    });

    // Set default values if a size is already selected
    if ($('#size-selector').val()) {
        updatePriceAndStock($('#size-selector'));
    }
});

function updatePriceAndStock(sizeSelector) {
    const selectedOption = sizeSelector.find('option:selected');
    
    if (!selectedOption.val()) {
        $('#variant-stock').text('Select a size to see available stock');
        return;
    }
    
    const regularPrice = selectedOption.data('regular-price');
    const salesPrice = selectedOption.data('sales-price');
    const quantity = selectedOption.data('quantity');
    
    // Update price display
    if (salesPrice && salesPrice !== regularPrice) {
        $('#price-display').html(`
            <h3>
                <strong class="item-price">
                    <del>₹${regularPrice}</del> ₹${salesPrice}
                </strong>
            </h3>
        `);
    } else {
        $('#price-display').html(`
            <h3>
                <strong class="item-price">₹${regularPrice}</strong>
            </h3>
        `);
    }
    
    // Update stock information
    $('#variant-stock').text(`Available Stock: ${quantity}`);
    $('#quantity').attr('max', quantity);
    
    // If current quantity exceeds available stock, adjust it
    const currentQty = parseInt($('#quantity').val());
    if (currentQty > quantity) {
        $('#quantity').val(quantity);
    }
}

function changeMainImage(src) {
    // Just update the src attribute - works the same for Cloudinary or local images
    $('.main-image').attr('src', src);
    
    // If you're using zoom functionality, you may need to reinitialize it
    if ($('.product-image-zoom').length) {
        $('.product-image-zoom').trigger('zoom.destroy'); // Destroy existing zoom
        $('.product-image-zoom').zoom({                  // Re-initialize zoom
            magnify: 1.5
        });
    }
}
async function handleAddToCart(productId) {
        try {
            const sizeSelect  = document.getElementById('size-selector');
            const quantityInput = document.getElementById('quantity');

            if (!sizeSelect.value) {
                await Swal.fire({
                    title: 'Selection Required',
                    text: 'Please select an size',
                    icon: 'warning',
                    confirmButtonColor: '#3085d6'
                });
                return;
            }

            const quantity = parseInt(quantityInput.value);
            if (isNaN(quantity) || quantity < 1) {
                await Swal.fire({
                    title: 'Invalid Quantity',
                    text: 'Please enter a valid quantity',
                    icon: 'warning',
                    confirmButtonColor: '#3085d6'
                });
                return;
            }

            const payload = {
                productId: productId,
                variant: {
                  size: sizeSelect.value,
                    quantity: quantity
                }
            };

            const response = await fetch('/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(payload)
            });

            const data = await response.json();

            if (!response.ok) {
                throw new Error(data.message || 'Failed to add to cart');
            }

            if (data.cart) {
                const cartCount = data.cart.items.reduce((sum, item) => sum + item.variant.quantity, 0);
                const cartCountElement = document.querySelector('.bag .number');
                if (cartCountElement) {
                    cartCountElement.textContent = cartCount;
                }
            }

            await Swal.fire({
                title: 'Success!',
                text: data.message || 'Product added to cart successfully!',
                icon: 'success',
                confirmButtonColor: '#3085d6'
            });

        } catch (error) {
            console.error('Error:', error);
            await Swal.fire({
                title: 'Error!',
                text: error.message || 'Error adding to cart',
                icon: 'error',
                confirmButtonColor: '#3085d6'
            });
        }
    }

    function showAlert(message, type = 'error') {
        const options = {
            title: type === 'error' ? 'Error!' : 'Success!',
            text: message,
            icon: type,
            confirmButtonColor: '#3085d6'
        };
        
        Swal.fire(options);
    }

    function handleSizeChange(productId) {
        const sizeSelector = document.getElementById('size-selector');
        const quantityInput = document.getElementById('quantity');
        const stockDisplay = document.getElementById('variant-stock');
        
        if (!sizeSelector || !quantityInput || !stockDisplay) return;
        
        const selectedSize = sizeSelector.value;
        
        fetch(`/api/products/${productId}/stock?size=${selectedSize}`)
            .then(response => response.json())
            .then(data => {
                if (data.stock !== undefined) {
                    stockDisplay.textContent = `Available Stock: ${data.stock}`;
                    quantityInput.max = data.stock;
                    quantityInput.value = Math.min(quantityInput.value, data.stock);
                }
            })
            .catch(error => {
                console.error('Error fetching stock:', error);
                Swal.fire({
                    title: 'Error!',
                    text: 'Error checking stock availability',
                    icon: 'error',
                    confirmButtonColor: '#3085d6'
                });
            });
    }

function updateStockDisplay(productId) {
    const sizeSelector = document.getElementById('size-selector');
    const quantityInput = document.getElementById('quantity');
    const stockDisplay = document.getElementById('variant-stock');
    
    if (!sizeSelector || !stockDisplay) return;
    
    const selectedSize = sizeSelector.value;
    if (!selectedSize) {
        stockDisplay.textContent = "Please select an Size";
        return;
    }
    
    console.log(`Fetching stock from: /api/products/${productId}/stock?size=${selectedSize}`);


    fetch(`/productDetailsPage/${productId}/stock?size=${selectedSize}`)
        .then(response => response.json())
        .then(data => {
            if (data.success && data.stock !== undefined) {
                stockDisplay.textContent = `Available Stock: ${data.stock}`;
                if (quantityInput) {
                    quantityInput.setAttribute('max', data.stock);
                    if (parseInt(quantityInput.value) > data.stock) {
                        quantityInput.value = data.stock;
                    }
                }
            } else {
                stockDisplay.textContent = data.message || "Error fetching stock";
            }
        })
        .catch(error => {
            console.error('Error fetching stock:', error);
            stockDisplay.textContent = "Error checking stock";
        });
}
document.addEventListener('DOMContentLoaded', function() {
    const sizeSelector = document.getElementById('size-selector');
    if (sizeSelector) {
        sizeSelector.addEventListener('change', function() {
            updateStockDisplay('<%=product._id%>');
        });
        
        if (sizeSelector.value) {
            updateStockDisplay('<%=product._id%>');
        }
    }
});

</script>



