<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Confirmation | Lush Scents</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #8a5a44;
      --primary-light: #c9b6a8;
      --secondary: #274546;
      --accent: #d4af37;
      --light: #f8f5f2;
      --dark: #2d2a2a;
      --success: #4a9375;
      --pending: #e7bb41;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Poppins', sans-serif;
      background-color: var(--light);
      color: var(--dark);
      line-height: 1.6;
    }
    
    .container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 0 20px;
    }
    
    .header {
      background-color: var(--secondary);
      padding: 20px 0;
      position: relative;
    }
    
    .header .container {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
    .logo {
      font-family: 'Playfair Display', serif;
      color: var(--light);
      font-size: 28px;
      font-weight: 700;
      letter-spacing: 1px;
      text-decoration: none;
      display: flex;
      align-items: center;
    }
    
    .logo i {
      margin-right: 10px;
      color: var(--accent);
    }
    
    .confirmation-container {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      margin: 40px auto;
      padding: 40px;
      position: relative;
      max-width: 800px;
    }
    
    .success-icon {
      width: 80px;
      height: 80px;
      background-color: var(--success);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 30px;
    }
    
    .success-icon i {
      color: white;
      font-size: 40px;
    }
    
    .thank-you {
      text-align: center;
      margin-bottom: 40px;
    }
    
    .thank-you h1 {
      font-family: 'Playfair Display', serif;
      font-size: 36px;
      margin-bottom: 10px;
      color: var(--secondary);
    }
    
    .thank-you p {
      color: #777;
      font-size: 18px;
    }
    
    .order-details {
      padding: 30px;
      border: 1px solid #eee;
      border-radius: 6px;
      margin-bottom: 30px;
      background-color: #fcfcfc;
    }
    
    .section-title {
      font-family: 'Playfair Display', serif;
      color: var(--primary);
      font-size: 22px;
      margin-bottom: 15px;
      padding-bottom: 10px;
      border-bottom: 2px solid var(--primary-light);
      position: relative;
    }
    
    .section-title::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: -2px;
      width: 60px;
      height: 2px;
      background-color: var(--accent);
    }
    
    .detail-row {
      display: flex;
      justify-content: space-between;
      padding: 10px 0;
      border-bottom: 1px dashed #eee;
    }
    
    .detail-row:last-child {
      border-bottom: none;
    }
    
    .detail-label {
      font-weight: 500;
      color: var(--dark);
    }
    
    .detail-value {
      color: #555;
    }
    
    .status-badge {
      display: inline-block;
      padding: 5px 12px;
      border-radius: 20px;
      font-size: 14px;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .status-pending {
      background-color: #fff4d4;
      color: #9a7d27;
    }
    
    .address-box {
      background-color: #f9f9f9;
      padding: 15px;
      border-radius: 6px;
      margin-top: 10px;
      font-size: 14px;
      line-height: 1.8;
    }
    
    .ordered-items {
      margin-top: 20px;
    }
    
    .item-card {
      display: flex;
      margin-bottom: 15px;
      padding: 15px;
      background-color: white;
      border-radius: 6px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
      transition: transform 0.2s;
    }
    
    .item-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    }
    
    .item-image {
      width: 80px;
      height: 80px;
      background-color: #f0f0f0;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 4px;
      margin-right: 15px;
    }
    
    .item-image i {
      color: var(--primary);
      font-size: 28px;
    }
    
    .item-details {
      flex: 1;
    }
    
    .item-name {
      font-weight: 600;
      margin-bottom: 5px;
      color: var(--secondary);
    }
    
    .item-meta {
      font-size: 14px;
      color: #777;
    }
    
    .item-price {
      font-weight: 600;
      color: var(--primary);
      font-size: 16px;
    }
    
    .buttons {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-top: 30px;
    }
    
    .btn {
      display: inline-block;
      padding: 12px 24px;
      border-radius: 30px;
      text-decoration: none;
      font-weight: 500;
      letter-spacing: 0.5px;
      transition: all 0.3s;
      border: none;
      cursor: pointer;
      text-align: center;
    }
    
    .btn-primary {
      background-color: var(--primary);
      color: white;
      box-shadow: 0 4px 15px rgba(138, 90, 68, 0.2);
    }
    
    .btn-primary:hover {
      background-color: #7a4e3a;
      transform: translateY(-2px);
      box-shadow: 0 6px 18px rgba(138, 90, 68, 0.25);
    }
    
    .btn-outline {
      background-color: transparent;
      color: var(--secondary);
      border: 2px solid var(--secondary);
    }
    
    .btn-outline:hover {
      background-color: var(--secondary);
      color: white;
      transform: translateY(-2px);
    }
    
    .order-number {
      font-family: 'Courier New', monospace;
      background-color: #f7f7f7;
      padding: 3px 8px;
      border-radius: 4px;
      font-size: 14px;
      letter-spacing: 0.5px;
    }
    
    .footer {
      background-color: var(--secondary);
      color: #a0acad;
      padding: 30px 0;
      text-align: center;
      font-size: 14px;
    }
    
    .footer a {
      color: var(--light);
      text-decoration: none;
    }
    
    .divider {
      height: 1px;
      background: linear-gradient(to right, transparent, var(--primary-light), transparent);
      margin: 30px 0;
    }
    
    .price-highlight {
      font-size: 20px;
      color: var(--secondary);
      font-weight: 600;
    }
    
    @media (max-width: 768px) {
      .confirmation-container {
        padding: 25px;
      }
      
      .buttons {
        flex-direction: column;
      }
      
      .item-card {
        flex-direction: column;
      }
      
      .item-image {
        margin-bottom: 15px;
        margin-right: 0;
      }
    }
  </style>
</head>
<body>
  <% const formatCurrency = (amount) => `â‚¹${parseFloat(amount).toFixed(2)}` %>
  
  <main class="container">
    <div class="confirmation-container">
      <div class="success-icon">
        <i class="fas fa-check"></i>
      </div>
      
      <div class="thank-you">
        <h1>Thank You for Your Order!</h1>
        <p>Your fragrance journey is about to begin. We'll process your order shortly.</p>
      </div>
      
      <div class="order-details">
        <h3 class="section-title">Order Information</h3>
        <div class="detail-row">
          <span class="detail-label">Order ID:</span>
          <span class="detail-value order-number"><%= order.orderId %></span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Date:</span>
          <span class="detail-value"><%= orderDate %></span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Payment Method:</span>
          <span class="detail-value"><%= order.paymentMethod %></span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Status:</span>
          <span class="status-badge status-pending"><%= order.status %></span>
        </div>
      </div>
      
      <div class="order-details">
        <h3 class="section-title">Price Summary</h3>
        <div class="detail-row">
          <span class="detail-label">Total Price:</span>
          <span class="detail-value"><%= formatCurrency(order.totalPrice) %></span>
        </div>
        <% if (order.discount > 0) { %>
        <div class="detail-row">
          <span class="detail-label">Discount:</span>
          <span class="detail-value"><%= formatCurrency(order.discount) %></span>
        </div>
        <% } %>
        <div class="detail-row">
          <span class="detail-label">Final Amount:</span>
          <span class="detail-value price-highlight"><%= formatCurrency(order.finalAmount) %></span>
        </div>
      </div>
      
    
      
      <div class="order-details">
        <h3 class="section-title">Ordered Items</h3>
        <div class="ordered-items">
          <% order.orderedItems.forEach(item => { %>
            <div class="item-card">
              <div class="item-image">
                <% if (order.orderedItems && order.orderedItems.length > 0) { %>
                  <% order.orderedItems.forEach(function(item) { %>
                    <% if (item.product && item.product.productImage && item.product.productImage.length > 0) { %>
                      <img 
                        src="<%= item.product.productImage[0] %>" 
                        alt="<%= item.product.productName %>"
                        style="width: 100%; height: 200px; object-fit: contain;"
                      >
                    <% } else { %>
                      <div>No Image Available</div>
                    <% } %>
                  <% }); %>
                <% } else { %>
                  <div>No Ordered Items Found</div>
                <% } %>
              </div>
              <div class="item-details">
                <div class="item-name"><%= item.name %></div>
                <div class="item-meta">
                  <div>Size: <%= item.variant.size %></div>
                  <div>Quantity: <%= item.variant.quantity %></div>
                </div>
              </div>
              <div class="item-price"><%= formatCurrency(item.price) %></div>
            </div>
          <% }) %>
        </div>
      </div>
      
      <div class="divider"></div>
      
      <div class="buttons">
        <a href="/shop" class="btn btn-outline">
          <i class="fas fa-arrow-right"></i> Continue Shopping
        </a>
      </div>
    </div>
  </main>
  
</body>
</html>