<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <style>
      .address-card {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 15px;
        margin-bottom: 15px;
        position: relative;
        transition: all 0.3s;
      }
      .address-card.selected {
        border-color: #7971ea;
        background-color: #f8f9fa;
      }
      .address-radio {
        position: absolute;
        top: 15px;
        right: 15px;
      }
      .address-details {
        margin-right: 30px;
      }
      .address-actions {
        margin-top: 10px;
      }
      .new-address-btn {
        margin-bottom: 20px;
        display: inline-block;
      }
    </style>
