    <link rel="stylesheet" href="css/style.css">
    <style>
      .dropdown {
          position: relative;
          display: inline-block;
      }
  
      .dropdown > a {
          display: block;
          padding: 5px 10px;
          color: #000;
          text-decoration: none;
      }
  
      .dropdown-content {
          display: none;
          position: absolute;
          background-color: white;
          min-width: 160px;
          box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
          z-index: 1000;
          right: 0;
          border-radius: 4px;
          margin-top: 5px;
      }
  
      .dropdown-content a {
          color: #000;
          padding: 12px 16px;
          text-decoration: none;
          display: block;
          width: 100%;
          font-size: 14px;
          transition: background-color 0.3s ease;
      }
  
      .dropdown-content a:hover {
          background-color: #f8f9fa;
      }
  
      .dropdown:hover .dropdown-content {
          display: block;
      }
  
      .dropdown-content::before {
          content: '';
          position: absolute;
          top: -6px;
          right: 20px;
          width: 0;
          height: 0;
          border-left: 6px solid transparent;
          border-right: 6px solid transparent;
          border-bottom: 6px solid white;
      }
  
      .site-logo a,
      .icons-btn,
      .site-menu li a,
      .site-menu-link {
          text-decoration: none !important;
      }
  
      .site-logo a {
          color: #000;
          transition: color 0.3s ease;
      }
  
      .site-logo a:hover {
          color: #666;
      }
  
      .icons-btn {
          color: #000;
          transition: color 0.3s ease;
      }
  
      .icons-btn:hover {
          color: #666;
      }
  
      .site-menu li a {
          color: #000;
          transition: color 0.3s ease;
      }
  
      .site-menu li a:hover {
          color: #666;
      }
  
      .icons-btn.bag {
          text-decoration: none !important;
      }
  
.product-item,
.product-category,
.item-title a {
    text-decoration: none !important; 
}


.item-title a:hover {
    color: #666;  
}
  </style>  
  </head>

